---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Amy Boardman Art">
	<main class="h-screen flex flex-col justify-center align-center items-center font-primary font-normal bg-background">
		<!-- class="bg-no-repeat bg-left-top" style="background-image: url(../../public/images/multi_paint_washes.png);"-->
		<img src="../../public/images/logo.png" alt="Logo" class="h-40 w-40 pb-4">
		<h1 class="text-5xl font-logo pb-4 text-highlight">Amy Boardman Art</h1>
		<h2 class="text-8xl font-semibold pb-4 text-secondary">Coming Soon</h2>
		<p class="text-2xl pb-2 text-primary">Contact Me</p>
		<a href="mailto:amyboardmanart@gmail.com" class="text-2xl pb-4 text-primary">amyboardmanart@gmail.com</a>
		<div class="flex gap-x-4">
			<a href="https://www.etsy.com/shop/amyboardmanart" class="hover:cursor-pointe">
				<i class="fa-brands fa-etsy text-4xl text-primary"></i>
			</a>
			<a href="https://www.instagram.com/amyboardmanart/" class="hover:cursor-pointe">
				<i class="fa-brands fa-instagram text-4xl text-primary"></i>
			</a>
		</div>
